---
type Props = {
  href: string;
  text: string;
  external?: boolean;
};

const { href, text, external } = Astro.props;

const attrs = external && { target: '_blank', rel: 'noopener noreferrer' };
---

<a
  href={href}
  {...attrs}
  class="rounded border-2 border-stone-950 px-3 py-1 duration-300 hover:bg-stone-950 hover:text-white dark:border-white dark:hover:bg-white dark:hover:text-stone-950"
>
  {text}
</a>
